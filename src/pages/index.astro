---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Unified Networks',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book a Free Call',
        href: '/#contact',
        icon: 'tabler:phone',
      },
      {
        text: 'Our Services',
        href: '#features',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Unified Networks' }}
  >
    <Fragment slot="title">
      Professional Network Solutions for Homes & Small Businesses
    </Fragment>

    <Fragment slot="subtitle">
      We design, install, and optimize networks using high-quality UniFi equipment. From Wi-Fi dead zones to Starlink setup — Unified Networks helps you stay connected with confidence.
    </Fragment>
  </Hero>

  <!-- Note Section -->
  <Note title="Our Promise" description="Tailored network solutions. Honest advice. No guesswork." />

  <!-- Features Section -->
  <Features
    id="features"
    tagline="What We Offer"
    title="Network Services That Keep You Connected"
    subtitle="We specialize in UniFi systems, helping homes and businesses get the most out of their internet."
    items={[
      {
        title: 'Network Design & Setup',
        description: 'Full planning and installation of wired and wireless networks, customized for your space and usage needs.',
        icon: 'tabler:network',
      },
      {
        title: 'Wi-Fi Optimization',
        description: 'We eliminate dead zones and interference, ensuring reliable Wi-Fi coverage throughout your property.',
        icon: 'tabler:wifi',
      },
      {
        title: 'Broadband & Starlink Consulting',
        description: 'Get expert advice on your best internet options including Starlink, mobile broadband and satellite.',
        icon: 'tabler:satellite',
      },
      {
        title: 'Point-to-Point Links',
        description: 'Connect outbuildings, farms, or remote cameras with stable long-distance wireless links.',
        icon: 'tabler:antenna-bars-5',
      },
      {
        title: 'UniFi System Expertise',
        description: 'We deploy enterprise-grade UniFi systems scaled to your environment — no contracts, just quality.',
        icon: 'tabler:brand-ubuntu',
      },
      {
        title: 'Network Health Checks',
        description: 'Already have a setup? We test and diagnose slowdowns, interference and security issues.',
        icon: 'tabler:activity',
      },
    ]}
  />

  <!-- Additional Content Sections or CTA here -->
</Layout>
