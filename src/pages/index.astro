---
// Import the main layout component
import Layout from '~/layouts/PageLayout.astro';

// Import the widgets/components used on this page
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
// import FAQs from '~/components/widgets/FAQs.astro'; // Keep this commented out or remove if not used immediately

// Define metadata for the page
const metadata = {
  title: 'Fix Slow Internet & Wi-Fi Blackspots | Expert UniFi & Starlink Installation | Unified Networks', // SEO Optimized Title
  ignoreTitleTemplate: true, // Uses the title as is, without appending the site title
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book Your Free Network Consultation', // General CTA
        href: '/#contact', // Assuming you'll have a contact section with this ID or a contact page
        icon: 'tabler:phone',
      },
      {
        text: 'Our Network Solutions', // General secondary CTA
        href: '#services', // Links to the Features ID
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Unified Networks - Solutions for slow internet, Wi-Fi blackspots, and Starlink installation' }}
  >
    <Fragment slot="title">
      Tired of Slow Internet & Wi-Fi Dead Zones? Expert UniFi & Starlink Network Solutions for Flawless Connectivity.
    </Fragment>

    <Fragment slot="subtitle">
      We design, install, and optimize high-performance UniFi and Starlink networks to eliminate frustrating slowdowns, buffering, and Wi-Fi blackspots. Get reliable, fast internet for your home or business with our professionally engineered solutions.
    </Fragment>
  </Hero>

  <Note
    title="Our Promise: Intelligent Design, Seamless Performance."
    description="We deliver tailored UniFi and Starlink network solutions built on honest advice and meticulous planning. No guesswork â€“ just robust, high-performance connectivity designed to solve your internet problems and meet your specific needs."
  />

  <Features
    id="services" // ID for CTA link
    tagline="Our Network Expertise"
    title="Comprehensive Solutions for Your Internet Challenges"
    subtitle="We specialize in the UniFi Network ecosystem and professional Starlink installations, providing homes and businesses with solutions for slow internet, poor Wi-Fi coverage, and the need for reliable, high-speed connectivity. Discover how we can enhance your internet experience."
    items={[
      {
        title: 'Custom UniFi Network Design & Deployment',
        description: 'Suffering from slow internet or patchy Wi-Fi? We design and deploy bespoke UniFi network infrastructures, from gateways and switches to high-performance Wi-Fi access points, ensuring optimal coverage, boosted speeds, and scalability for your property.',
        icon: 'tabler:network',
      },
      {
        title: 'Expert Starlink Installation & UniFi Integration', // Starlink more prominent
        description: 'Get reliable high-speed internet, even in remote locations, with our professional Starlink installation service. We ensure optimal satellite dish setup for maximum performance and can seamlessly integrate Starlink with a robust UniFi network for flawless Wi-Fi distribution throughout your premises.',
        icon: 'tabler:satellite',
      },
      {
        title: 'Eliminate Wi-Fi Dead Zones & Boost Speed with UniFi',
        description: 'Stop Wi-Fi blackspots and frustrating buffering. We leverage UniFi\'s powerful RF management and diverse access point range to guarantee seamless, high-speed Wi-Fi coverage and reliable internet throughout your home or business.',
        icon: 'tabler:wifi',
      },
      {
        title: 'Extend Your Network: UniFi Point-to-Point Links',
        description: 'Need to connect outbuildings or remote areas without running cables? We implement robust UniFi point-to-point (PtP) and point-to-multipoint (PtMP) wireless bridges for stable, high-speed connections, eliminating network blackspots between properties.',
        icon: 'tabler:antenna-bars-5',
      },
      {
        title: 'Your Expert UniFi Network Specialists',
        description: 'Deep expertise in the UniFi Network application and hardware. We deploy and manage enterprise-grade UniFi network systems tailored to your environment, offering powerful solutions for slow internet, better routing, enhanced switching, and superior Wi-Fi features without complex contracts.',
        icon: 'tabler:settings-cog',
      },
      {
        title: 'Network Health Checks: Diagnose & Fix Slow Internet',
        description: 'Is your current network underperforming or causing slow internet speeds? We test and diagnose slowdowns, Wi-Fi interference, and security issues, providing actionable insights to optimize your existing UniFi or other network setups and improve internet speed.',
        icon: 'tabler:activity',
      },
    ]}
  />

  </Layout>
