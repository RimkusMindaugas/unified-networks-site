---
// Import the main layout component
import Layout from '~/layouts/PageLayout.astro';

// Import the widgets/components used on this page
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
// import FAQs from '~/components/widgets/FAQs.astro'; // Keep this commented out or remove if not used immediately

// Define metadata for the page
const metadata = {
  title: 'Expert Network Setup & Wi-Fi Solutions | Fix Slow Internet & Dead Zones | Unified Networks (Starlink Available)', // SEO Optimized Title
  ignoreTitleTemplate: true, // Uses the title as is, without appending the site title
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Book Your Free Network Consultation',
        href: '/#contact',
        icon: 'tabler:phone',
      },
      {
        text: 'Our Network Solutions',
        href: '#services',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Unified Networks - Professional network setup for fast, reliable internet and Wi-Fi' }}
  >
    <Fragment slot="title">
      Tired of Slow Internet & Wi-Fi Dead Zones? Get Flawless Connectivity with Our Expert Network Solutions.
    </Fragment>

    <Fragment slot="subtitle">
      We design, install, and optimize high-performance networks using professional-grade equipment to eliminate frustrating slowdowns, buffering, and Wi-Fi blackspots. We also provide expert Starlink installation for challenging locations. Experience reliable, fast internet for your home or business.
    </Fragment>
  </Hero>

  <Note
    title="Our Promise: Intelligent Design, Seamless Performance."
    description="We deliver tailored network solutions, including Starlink installations, built on honest advice and meticulous planning. No guesswork â€“ just robust, high-performance connectivity designed to solve your internet problems and meet your specific needs."
  />

  <Features
    id="services" // ID for CTA link
    tagline="Our Network Expertise"
    title="Comprehensive Solutions for Your Internet Challenges"
    subtitle="We specialize in creating robust networks with professional-grade systems to provide reliable solutions for slow internet and poor Wi-Fi coverage. We also offer expert Starlink installations for areas with challenging connectivity. Discover how we can enhance your internet experience."
    items={[
      {
        title: 'Custom Network Design & Deployment',
        description: 'Suffering from slow internet or patchy Wi-Fi? We design and deploy bespoke network infrastructures, from advanced routers and switches to high-performance Wi-Fi access points, ensuring optimal coverage, boosted speeds, and scalability for your property.',
        icon: 'tabler:network',
      },
      {
        title: 'Eliminate Wi-Fi Dead Zones & Boost Speed',
        description: 'Stop Wi-Fi blackspots and frustrating buffering. We leverage powerful RF management and a diverse range of access points to guarantee seamless, high-speed Wi-Fi coverage and reliable internet throughout your home or business.',
        icon: 'tabler:wifi',
      },
      {
        title: 'Expert Starlink Installation Service',
        description: 'For locations with limited traditional broadband, we offer professional Starlink installation services. We ensure optimal satellite dish setup for maximum performance and can integrate Starlink into your existing network for reliable Wi-Fi distribution.',
        icon: 'tabler:satellite',
      },
      {
        title: 'Extend Your Network: Point-to-Point Links',
        description: 'Need to connect outbuildings or remote areas without running cables? We implement robust point-to-point (PtP) and point-to-multipoint (PtMP) wireless bridges for stable, high-speed connections, eliminating network blackspots between properties.',
        icon: 'tabler:antenna-bars-5',
      },
      {
        title: 'Your Expert Network System Specialists',
        description: 'Deep expertise in advanced network applications and hardware. We deploy and manage enterprise-quality network systems tailored to your environment, offering powerful solutions for slow internet, better routing, enhanced switching, and superior Wi-Fi features without complex contracts.',
        icon: 'tabler:settings-cog',
      },
      {
        title: 'Network Health Checks: Diagnose & Fix Slow Internet',
        description: 'Is your current network underperforming or causing slow internet speeds? We test and diagnose slowdowns, Wi-Fi interference, and security issues, providing actionable insights to optimize your existing network setup and improve internet speed.',
        icon: 'tabler:activity',
      },
    ]}
  />

  </Layout>
